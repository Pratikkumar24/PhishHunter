{
    "manifest_version": 2,
    "name": "Hello world",
    "version": "1.0",
    "description": "A hello world application",
    "icons": {
        "128": "images/icon128.png",
        "48": "images/icon48.png",
        "16": "images/icon16.png"

    },
    "background": {
        "scripts": ["eventPage.js"],
        "persistant": false
    },


    "browser_action": {
        "default_icon": "images/icon128.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "contextMenus",
        "storage",
        "notifications",
        "tabs"
    ]


}